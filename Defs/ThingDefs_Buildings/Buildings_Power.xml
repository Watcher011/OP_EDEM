 <ThingDef ParentName="BuildingBase">
		<defName>ShildGenerator</defName>
		<label>Shild Generator</label>
		<description>A compact research terminal for expanding laboratory operations. Requires power.</description>
		
			<drawerType>MapMeshAndRealTime</drawerType>
		<graphicData>
			<texPath>Things/Building/SH9</texPath>
			  <graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>(1,1)</drawSize>
			<shadowData>
				<volume>(0.85, 1.0, 0.85)</volume>
				<offset>(0,0,0)</offset>
			</shadowData>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<tickerType>Normal</tickerType>
		<costList>
		     <Steel>100</Steel>
			 <SignalChip>1</SignalChip>
           <ComponentIndustrial>3</ComponentIndustrial>
		</costList>
		<statBases>
			<WorkToMake>7000</WorkToMake>
			<MaxHitPoints>320</MaxHitPoints>
			<Flammability>0.4</Flammability>
			<ResearchSpeedFactor>0.65</ResearchSpeedFactor>
			<Bulk>55</Bulk>
			<Mass>30</Mass> 
		</statBases>
		<size>(1,1)</size>
		<comps>
		<li Class="CompProperties_ProjectileInterceptor">
        <radius>4</radius>
        <interceptGroundProjectiles>true</interceptGroundProjectiles>
        <color>(0.4, 0.4, 0.4)</color>
        <reactivateEffect>BulletShieldGenerator_Reactivate</reactivateEffect>
        <activeSound>BulletShield_Ambience</activeSound>
        <disarmedByEmpForTicks>1080</disarmedByEmpForTicks>
        <chargeIntervalTicks>600000</chargeIntervalTicks>
        <chargeDurationTicks>60000</chargeDurationTicks>
      </li>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>-50</basePowerConsumption>
				<shortCircuitInRain>false</shortCircuitInRain>
			</li>
			<li Class="CompProperties_Flickable"/>
			
			 <li Class="CompProperties_Glower">
            <glowRadius>3.0</glowRadius>
            <glowColor>(55,255,33,1)</glowColor>
      </li>
			<li Class="CompProperties_Breakdownable"/>
			
		</comps>
	
		<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
		<designationCategory>Misc</designationCategory>
		
		<rotatable>False</rotatable>
		<constructionSkillPrerequisite>9</constructionSkillPrerequisite>
		 <researchPrerequisites>
         <li>Electricity</li>
	    <li>EDEM</li>
    </researchPrerequisites>
	</ThingDef>
</Defs>
