<?xml version="1.0" encoding="utf-8" ?>

<Defs>

	
	
	
	<ThingDef Name="ShelfBaseToxic" ParentName="FurnitureWithQualityBase" Abstract="True">
    <thingClass>Building_Storage</thingClass>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <fillPercent>0.4</fillPercent>
    <castEdgeShadows>true</castEdgeShadows>
    <pathCost>250</pathCost>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <defaultPlacingRot>South</defaultPlacingRot>
    <statBases>
      <Flammability>1.0</Flammability>
      <Beauty>0.5</Beauty>
    </statBases>
    <building>
      <preventDeteriorationOnTop>true</preventDeteriorationOnTop>
      <ignoreStoredThingsBeauty>true</ignoreStoredThingsBeauty>
      <maxItemsInCell>300</maxItemsInCell>
      <storageGroupTag>Shelf</storageGroupTag>
      <blueprintClass>Blueprint_Storage</blueprintClass>
    <fixedStorageSettings>
         <filter>
          <disallowNotEverStorable>true</disallowNotEverStorable>
          <categories>
            <li>Root</li>
          </categories>
          <disallowedCategories>
            <li>Chunks</li>
            <li>Plants</li>
            <li>Buildings</li>
			  <li>Foods</li>
            <li>Manufactured</li>
            <li>ResourcesRaw</li>
            <li>Weapons</li>
            <li>Apparel</li>
            <li>BodyParts</li>
          </disallowedCategories>
          <specialFiltersToDisallow>
            <li>AllowLargeCorpses</li>
          </specialFiltersToDisallow>
        </filter>
      </fixedStorageSettings>
      <defaultStorageSettings>
        <priority>Preferred</priority>
        <filter>
          <categories>
          <li>Items</li>
          </categories>
        </filter>
      </defaultStorageSettings>
      <paintable>true</paintable>
    </building>
    <inspectorTabs>
      <li>ITab_Storage</li>
    </inspectorTabs>
    <designationHotKey>Misc12</designationHotKey>
    <staticSunShadowHeight>0.5</staticSunShadowHeight>
    <surfaceType>Item</surfaceType>
    <canOverlapZones>false</canOverlapZones>
    <researchPrerequisites>
      <li>ComplexFurniture</li>
    </researchPrerequisites>
    <comps>
      <li Class="CompProperties_Styleable" />
    </comps>
  </ThingDef>

  <ThingDef ParentName="ShelfBaseToxic">
    <defName>ShelfTox</defName>
    <label>Контейнер для токсичных отходов</label>
    <description>Контейнер высокого давления, который может безопасно хранить большое количество токсичных отходов и из-за чего они разлагаются довольно медленно ... Нет ... Хранить внутри все равно небезопасно. если вы не обращались с ними хорошо, он легко превратится в гигантскую токсичную бомбу.</description>
    <graphicData>
     <texPath>Things/Building/ToxicBar</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>(4.3,3.3)</drawSize>
    </graphicData>
	<rotatable>true</rotatable>
    <costStuffCount>320</costStuffCount>
	  <neverMultiSelect>true</neverMultiSelect>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints> 
      <Mass>800</Mass>
      <WorkToBuild>500</WorkToBuild>
      <StyleDominance MayRequire="Ludeon.RimWorld.Ideology">5</StyleDominance>
    </statBases>
    <size>(4,3)</size>
    <designationHotKey>Misc12</designationHotKey>
	<researchPrerequisites>
      <li>ToxifierGenerator</li>
    </researchPrerequisites>
  </ThingDef>
	
</Defs>	