<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingCategoryDef>
    <defName>AmmoToxic</defName>
    <label>ToxicAmmo</label>
    <parent>AmmoHighCaliber</parent>
    <iconPath>UI/Icons/ThingCategories/Toxin</iconPath>
  </ThingCategoryDef>
	
	<!-- ==================== AmmoSet ========================== -->

  <CombatExtended.AmmoSetDef>
    <defName>AmmoSet_Toxic</defName>
    <label>Toxic</label>
    <ammoTypes>
      <Ammo_Toxic_Sabot>Bullet_Toxic_Sabot</Ammo_Toxic_Sabot>	       
    </ammoTypes>
    <similarTo>AmmoSet_AntiMateriel</similarTo>
  </CombatExtended.AmmoSetDef>
	
	<!-- ==================== Ammo ========================== -->

  <ThingDef Class="CombatExtended.AmmoDef" Name="AmmoToxicBase" ParentName="SmallAmmoBase" Abstract="True">
    <description>Prototype smoothbore cartridge designed for anti-material use.</description>
    <statBases>
	  <Mass>0.15</Mass>
	  <Bulk>0.33</Bulk>
    </statBases>
    <tradeTags>
      <li>CE_AutoEnableTrade</li>
      <li>CE_AutoEnableCrafting</li>
    </tradeTags>
    <thingCategories>
      <li>AmmoToxic</li>
    </thingCategories>
	<stackLimit>2000</stackLimit>
  </ThingDef>

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="AmmoToxicBase">
		<defName>Ammo_Toxic_Sabot</defName>
		<label>Toxic cartridge (Sabot)</label>
		<graphicData>
			<texPath>Things/Ammo/HighCaliber/Toxic</texPath>
			 <graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<statBases>
			<MarketValue>0.64</MarketValue>
			<Mass>0.107</Mass>
		</statBases>
		<ammoClass>Toxic</ammoClass>
		<cookOffProjectile>Bullet_Toxic_Sabot</cookOffProjectile>
	</ThingDef>
	
	<!-- ================== Projectile ================== -->

    <ThingDef Name="BaseToxicBullet" ParentName="BaseBullet" Abstract="true">
      <graphicData>
        <texPath>Things/Projectile/Acid2Ball</texPath>
        <graphicClass>Graphic_Single</graphicClass>
      </graphicData>
      <projectile Class="CombatExtended.ProjectilePropertiesCE">
         <damageDef>BulletToxic</damageDef>
      </projectile>
    </ThingDef>

    <ThingDef ParentName="BaseToxicBullet">
      <defName>Bullet_Toxic_Sabot</defName>
      <label>Toxic bullet (Sabot)</label>
      <projectile Class="CombatExtended.ProjectilePropertiesCE">
        <speed>35</speed>
	    <damageAmountBase>26</damageAmountBase>
	    <armorPenetrationSharp>60</armorPenetrationSharp>
	    <armorPenetrationBlunt>420.5</armorPenetrationBlunt>
      </projectile>
    </ThingDef>

	<!-- ==================== Recipes ========================== -->


	
	<RecipeDef ParentName="GrenadeRecipeBase">
    <defName>MakeToxinAmmo</defName>
    <label>make ToxinAmmo x100</label>
    <description>Craft 100 Toxin Ammo.</description>
    <jobString>Making Toxin Ammo.</jobString>
    <researchPrerequisite>Machining</researchPrerequisite>
    <workAmount>3600</workAmount>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>8</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>FSX</li>
          </thingDefs>
        </filter>
        <count>4</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Wastepack</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Steel</li>
        <li>FSX</li>
        <li>Wastepack</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Ammo_Toxic_Sabot>100</Ammo_Toxic_Sabot>
    </products>
  </RecipeDef>

	
</Defs>
