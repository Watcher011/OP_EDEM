<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingCategoryDef>
		<defName>AmmoPlasmaCellHeavy</defName>
		<label>Plasma Heavy Power Cell</label>
		<parent>AmmoAdvanced</parent>
		<iconPath>UI/Icons/ThingCategories/plasmaceal</iconPath>
	</ThingCategoryDef>

	<!-- ==================== AmmoSet ========================== -->

	<CombatExtended.AmmoSetDef>
		<defName>AmmoSet_PlasmaUltraHeavy</defName>
		<label>Plasma ultra Heavy Power Cell</label>
		<ammoTypes>
			<Ammo_PlasmaUltraHeavy>Bullet_PlasmaUltraHeavy</Ammo_PlasmaUltraHeavy>
		</ammoTypes>
	</CombatExtended.AmmoSetDef>

	<!-- ==================== Ammo ========================== -->

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="SpacerSmallAmmoBase">
		<defName>Ammo_PlasmaUltraHeavy</defName>
		<label>Plasma Heavy Power Cell</label>
		<description>Plasma containment power cell optimized for heavy weapons</description>
		<statBases>
			<Mass>0.134</Mass>
			<Bulk>0.51</Bulk>
			<MarketValue>2.52</MarketValue>
		</statBases>
		<tradeTags>
			<li>CE_AutoEnableTrade</li>
			<li>CE_AutoEnableCrafting_FabricationBench</li>
			<!-- Plasma ammo can't be handloaded, and the containment cell must be precision-machined anyway -->
		</tradeTags>
		<thingCategories>
			<li>AmmoPlasmaCellHeavy</li>
		</thingCategories>
		<stackLimit>75</stackLimit>
		<graphicData>
			<texPath>UI/Icons/ThingCategories/plasmaceal</texPath>
		     <graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<ammoClass>Plasma</ammoClass>
		<comps>
			<!-- Arbitarily defined cookoff explosive stats; represents a plasma containment system failing -->
			  <li Class="CombatExtended.CompProperties_ExplosiveCE">
				<damageAmountBase>85</damageAmountBase>
				<explosiveDamageType>PlasmaF</explosiveDamageType>
				<explosiveRadius>8.5</explosiveRadius>
				<applyDamageToExplosionCellsNeighbors>true</applyDamageToExplosionCellsNeighbors>
			  </li>
			<li Class="CombatExtended.CompProperties_Fragments">
				<fragments>
					<Fragment_Large>8</Fragment_Large>
					<Fragment_Small>15</Fragment_Small>
				</fragments>
			</li>
		</comps>
	</ThingDef>

	<!-- ================== Projectiles ================== -->

	<ThingDef ParentName="BaseBullet">
		<defName>Bullet_PlasmaUltraHeavy</defName>
		<label>Plasma Bol</label>
		<graphicData>
			<texPath>Things/Projectile/core</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<speed>80</speed>
			<damageDef>PlasmaF</damageDef>
			<damageAmountBase>25</damageAmountBase>
			<explosionRadius>8</explosionRadius>
			<applyDamageToExplosionCellsNeighbors>true</applyDamageToExplosionCellsNeighbors>
			<preExplosionSpawnThingDef>FilthPrometheum</preExplosionSpawnThingDef>
            <preExplosionSpawnChance>0.85</preExplosionSpawnChance>
			<secondaryDamage>
			  <li>
          <def>EMP</def>
          <amount>7</amount>
               </li>
			</secondaryDamage>
			<screenShakeFactor>0</screenShakeFactor>
		</projectile>
	</ThingDef>

	<!-- ==================== Recipes ========================== -->

	<RecipeDef ParentName="ChargeAmmoRecipeBase">
		<defName>MakeAmmo_PlasmaCellUltraHeavy</defName>
		<label>make Plasma Heavy Power Cells</label>
		<description>Craft  of Plasma Heavy Power Cells.</description>
		<jobString>Making Plasma ultra Heavy Power Cells.</jobString>
		<workAmount>6800</workAmount>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>yadaritRaW</li>
					</thingDefs>
				</filter>
				<count>9</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>ComponentIndustrial</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Steel</li>
				<li>yadaritRaW</li>
				<li>ComponentIndustrial</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Ammo_PlasmaUltraHeavy>75</Ammo_PlasmaUltraHeavy>
		</products>
	</RecipeDef>

</Defs>